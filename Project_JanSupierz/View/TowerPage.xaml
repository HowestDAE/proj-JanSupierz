<Page x:Class="Project_JanSupierz.View.TowerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:system="clr-namespace:System;assembly=mscorlib"
      xmlns:local="clr-namespace:Project_JanSupierz.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TowerPage">

    <Grid Background="Black" TextBlock.Foreground="AliceBlue">

        
        <Grid.Resources>
            <SolidColorBrush x:Key="mainTitle" Color="#a45841"/>
            <system:Double x:Key="mainTitleSize">18</system:Double>

            <SolidColorBrush x:Key="title" Color="#a45841"/>
            <system:Double x:Key="titleSize">14</system:Double>
            
            <!--<system:Double x:Key="textSize">13</system:Double>
            
            <system:Double x:Key="numberSize">26</system:Double>

            <Thickness x:Key="marginList">10,5</Thickness>
            <Thickness x:Key="marginBox">10</Thickness>--> 
        </Grid.Resources>
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Margin="10">
            <TextBlock Text="{Binding Name, FallbackValue=(name)}" HorizontalAlignment="Center" FontSize="{StaticResource mainTitleSize}"/>
            <TextBlock Text="{Binding Description, FallbackValue=(descripton)}"/>
        </StackPanel>

        <Image Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Source="https://statsnite.com/images/btd/towers/dart-monkey/tower.png"/>

        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
            <TextBlock Text="Statistics" HorizontalAlignment="Center" Foreground="{StaticResource title}" FontSize="{StaticResource titleSize}"/>

            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Cost:" HorizontalAlignment="Center" Margin="5" FontSize="{StaticResource titleSize}"/>
                    <TextBlock Text="{Binding Cost.Easy, FallbackValue=Easy: 170}" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Cost.Medium, FallbackValue=Medium: 200 }" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Cost.Hard, FallbackValue=Hard: 215 }" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Cost.Impoppable, FallbackValue=Impoppable: 240}" HorizontalAlignment="Center"/>
                </StackPanel>

            </Grid>
            
        </StackPanel>

    </Grid>
</Page>
